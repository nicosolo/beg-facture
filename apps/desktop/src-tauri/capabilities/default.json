{
    "$schema": "../gen/schemas/desktop-schema.json",
    "identifier": "default",
    "description": "Default permissions for the BEG Facture application",
    "windows": ["main"],
    "permissions": [
        "core:default",
        "dialog:default",
        "fs:default",
        "fs:allow-temp-write-recursive",
        {
            "identifier": "opener:allow-open-path",
            "allow": [{ "path": "$TEMP/**" }]
        },
        "opener:default",
        "shell:allow-open"
    ]
}
