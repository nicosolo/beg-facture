{
    "$schema": "../gen/schemas/desktop-schema.json",
    "identifier": "default",
    "description": "Default permissions for the BEG Facture application",
    "windows": ["main"],
    "permissions": [
        "core:default",
        "dialog:default",
        "opener:default",
        "shell:allow-open",
        {
            "identifier": "opener:allow-open-path",
            "allow": [
                {
                    "path": "**"
                }
            ]
        },
        {
            "identifier": "opener:allow-reveal-item-in-dir",
            "allow": [
                {
                    "path": "**"
                }
            ]
        }
    ]
}
